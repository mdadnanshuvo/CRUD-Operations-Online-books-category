@model List<Category>
@{
}


<div class="container">
    <partial name="Notifications"/>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List!
            </h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-controller="Category" asp-action="Add" class="btn btn-primary"> <i class="bi bi-plus-square"></i> Create a new category</a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>

                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"> Edit</i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>

                        </div>

                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>